<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta http-equiv="Content-Language" content="en">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <title>{% block title %}TRANSPORT CO{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
        <meta name="description" content="Tables are the backbone of almost all web applications.">
        <meta name="msapplication-tap-highlight" content="no">

        <base href="/" />

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">

            <script src="assets/theme_orig/assets/lib/jquery/jquery.min.js" type="text/javascript"></script>
            <script src="assets/theme_orig/assets/lib/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>

            <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
            <![endif]-->
        {% endblock %}
    </head>
    <body>
        <div class="be-wrapper be-fixed-sidebar">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <nav class="navbar navbar-default navbar-fixed-top be-top-header">
                <div class="container-fluid">
                    <div class="navbar-header"><a style="background-image: none;" href="/" class="navbar-brand">TRANSPORT CO</a></div>
                    <div class="be-right-navbar">
                        <ul class="nav navbar-nav navbar-right be-user-nav">
                            <li class="dropdown"><a href="#" data-toggle="dropdown" role="button" aria-expanded="false" class="dropdown-toggle"><img src="assets/theme_orig/assets/img/user.png"><span class="user-name">{{ app.user.username }}</span></a>
                                <ul role="menu" class="dropdown-menu">
                                    <li>
                                        <div class="user-info">
                                            <div class="user-name">{{ app.user.username }}</div>
                                        </div>
                                    </li>
                                    <li><a href="{{ path('fos_user_security_logout') }}"><span class="icon mdi mdi-power"></span> {{ 'Iesire'|trans }}</a></li>
                                </ul>
                            </li>
                        </ul>
                        <div class="page-title"><span>{% block page_title %}{% endblock %}</span></div>
                    </div>
                </div>
            </nav>

            <div class="be-left-sidebar">
                <div class="left-sidebar-wrapper"><a href="#" class="left-sidebar-toggle">Dashboard</a>
                    <div class="left-sidebar-spacer">
                        <div class="left-sidebar-scroll">
                            <div class="left-sidebar-content">
                                {% block side %}
                                    {{ knp_menu_render('sidebar', {'class': 'sidebar-elements', 'template': 'sidebar_knp_menu.html.twig'}) }}
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

            <div class="be-content">
                <div class="main-content">
                    {% block body %}{% endblock %}
                </div>
            </div>

        </div>


        {% block javascripts %}
            <script src="{{ asset('build/js/app.js') }}"></script>

            <script src="assets/theme_orig/assets/lib/perfect-scrollbar/js/perfect-scrollbar.jquery.min.js" type="text/javascript"></script>
            <script src="assets/theme_orig/assets/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
            <script src="assets/theme_orig/assets/js/bootbox.min.js"></script>

            <script src="assets/theme_orig/assets/lib/jquery.gritter/js/jquery.gritter.js" type="text/javascript"></script>

            <script src="assets/theme_orig/assets/lib/jquery.maskedinput/jquery.maskedinput.min.js" type="text/javascript"></script>
            <script src="assets/theme_orig/assets/js/app-form-masks.js" type="text/javascript"></script>

            <script src="assets/theme_orig/assets/lib/jquery.nestable/jquery.nestable.js" type="text/javascript"></script>
            <script src="assets/theme_orig/assets/lib/moment.js/min/moment.min.js" type="text/javascript"></script>
            <script src="assets/theme_orig/assets/lib/datetimepicker/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
            <script src="assets/theme_orig/assets/lib/select2/js/select2.min.js" type="text/javascript"></script>
            <script src="assets/theme_orig/assets/lib/bootstrap-slider/js/bootstrap-slider.js" type="text/javascript"></script>

            <script src="assets/theme_orig/assets/js/app-form-elements.js" type="text/javascript"></script>

            <script type="text/javascript">
                $(document).ready(function(){
                    //initialize the javascript
                    App.init();
                    App.masks();
                    App.formElements();
                });
            </script>
        {% endblock %}

        {% block jsOnPages %}{% endblock %}

    </body>
</html>
