<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default panel-border-color panel-border-color-primary">
            <div class="panel-body">

                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'DATA PLECARE'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.date_start|date("d.m.Y") }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'DATA SOSIRE'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.date_end|date("d.m.Y") }}</div>
                    </div>
                    <br />

                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'NUMAR FOAIE PARCURS'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.seria }}{{ item.numar_fp }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'NUMAR BEB'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.numar_beb }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'LOCALITATE'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.location }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'DESTINATIE'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.destination }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'GARA'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.terminal }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'ORA'|trans }}</b></div>
                        <div class="col-sm-7">
                            {{ item.hour_start|date("H:i") }}
                            {% if item.supl_hours is not empty %}
                                /{{ item.supl_hours }}
                            {% endif %}
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'SOFER'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.driver }}</div>
                    </div>
                    {% if item.driver_extra is not empty %}
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'SOFER 2'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.driver_extra }}</div>
                    </div>
                    {% endif %}
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'TRANSPORT'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.transport }}</div>
                    </div>

                </div>

                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'MOTORINA'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.motorina }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'MOTORINA PLECARE'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.motorina_plecare }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'MOTORINA CONSUMATA'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.motorina_consumata }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'KM PLECARE'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.km_start }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'KM SOSIRE'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.km_end }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'KM PARCURS'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.km_parcurs }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'PLAN'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.plan }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'PLAN F.'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.plan_defacto }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'PLAN B.'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.plan_brut }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'ORA RETUR'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.ora_retur|date("H:i") }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'ORE LUCRU'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.ore_lucru|date("H:i") }}</div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-5"><b>{{ 'NOTITE'|trans }}</b></div>
                        <div class="col-sm-7">{{ item.notes }}</div>
                    </div>
                </div>

                {% if item.tp == '2' %}

                <div style="clear: both;">&nbsp;</div>
                <div style="clear: both;"><hr /></div>

                <div class="col-sm-12 row">
                    <div class="col-md-4">
                        <div style="font-weight: bold;">{{ 'NUM CALATORI (BANI CASH)'|trans }}</div>
                        <div>{{ item.diagrama_qnt }}</div>
                    </div>

                    <div class="col-md-4">
                        <div style="font-weight: bold;">{{ 'SUMA TOTALA (BANI CASH)'|trans }}</div>
                        <div>{{ item.diagrama_amount }} MDL</div>
                    </div>
                </div>

                {% endif %}

            </div>
        </div>
    </div>
</div>